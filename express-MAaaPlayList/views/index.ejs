<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/home-page.css'/>
  
  </head>

  <body>
    <nav>
      <% if (user) { %>
        <a class = "nav-items" href="/playlists">Your Playlists</a>
        <a class = "nav-items" href="/logout">Log Out</a>
        <% } else { %>
       <a class = "nav-items" href="/auth/google">Log In</a>
       <% } %>
    </nav>
    <div id="logo">
      <img id="logo-img" src="https://i.imgur.com/XLSdDc1.png">
    </div>
<div id="search-song">
    <h2>Search For Songs</h2>
    <form id="search-song-form" action="/songs/songresults" method="POST">
      <div id="basic-search">
        <input id="search-song-input" type="text" name="name" placeholder="Song Name">
       <div id="advance">
          <input id="advanceSearch" type="checkbox" name="advanceSearch">
          <label for="advanceSearch"><span id="advancelabel">Advance Search</span></label>
       </div>
      </div>
      <input id="search-artist-input" type="text" name="artist" placeholder="Artist Name">
      <br><input id="search-song-btn" type="submit" value="Search">
    </form>
    <%- include('./partials/footer') %>
</div>
<img id="monkey"src="images/jinxmonkey.webp">
<img id="toy"src="images/jinxtoy.png">
<img id="jinx"src="images/jinxwashere.png">
<img id="skull"src="images/skull.webp">

<audio controls autoplay loop   style="opacity: 0;"><source src="sounds/neon.mp3" type="audio/mp3"></audio>

<script>
  let checkbox = document.querySelector('#advanceSearch')
  checkbox.addEventListener('change', (e) => {
    let artistSearch  = document.querySelector('#search-artist-input')
  if (e.currentTarget.checked) {
    artistSearch.style.display = 'block'
  } else {
    artistSearch.style.display = 'none'
    artistSearch.value = ''
  }
})
</script>