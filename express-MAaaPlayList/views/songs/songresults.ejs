<%- include('../partials/header') %>
<link rel='stylesheet' href='/stylesheets/searchresults.css' />

<% if(songName !== "" || artistName !== ""){%>
  <h1>Search results for "<%= songName %>"</h1>
  <div class="songs-container">
    <% songs.forEach(song => { %>
      <div id="songs">
      <div id="song-details-heading">
        <h3><%= song.title %></h3>
        <h2>by <%= song.artist.name %></h3>
      </div>
      <img id="cover" src="<%= song.album.cover_big %>">
      <br>
      <a href="/songs/<%=song.id%>">Details</a> 
    </div>
    <% }); %>

</div>
<%} else if(songName === "" && artistName === "") {%>
  <h1>No Songs Found</h1>
  <%}%>



<%- include('../partials/footer') %>